def readpom;
node {
  stages {
  stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], 
                doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], 
                userRemoteConfigs: [[credentialsId: 'jenkins', 
                url: 'https://github.com/premalathasubramaniam/DevOps-Demo-WebApp.git']]])
            }
        }
    
    stage('Build') {
      steps {
      readpom = readMavenPom file: '';
      dev artifactversion = readpom.version;
      echo "The version of an artifact is ${artifactversion}"
      //bat 'mvn -f DevOps-Demo-WebApp/pom.xml clean install'
      }
    }
  }
}
